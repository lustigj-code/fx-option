{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "../..",
    "baseUrl": "../..",
    "paths": {
      "@opentelemetry/api": ["vendor/@opentelemetry/api/index.d.ts"]
    }
  },
  "include": [
    "api/**/*.ts",
    "__tests__/**/*.ts",
    "types/**/*.d.ts",
    "../../specs/002-wire-portal-and/contracts/**/*.ts"
  ]
}
