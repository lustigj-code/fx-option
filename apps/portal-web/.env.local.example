# NextAuth configuration for local development
NEXTAUTH_SECRET=changeme-this-in-prod
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_DEBUG=false

# Credentials provider seed user
PORTAL_DEMO_USERNAME=demo@fxportal.local
PORTAL_DEMO_PASSWORD=demo-pass
PORTAL_DEMO_ROLES=treasury_manager
PORTAL_ROLE_SEED_PATH=../../specs/003-implement-secure-authentication/contracts/seed/portal-users.json

